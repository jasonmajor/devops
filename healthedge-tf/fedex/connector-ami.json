{
  "variables": {
    "connector_ssh_dir": "/home/connector/.ssh"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-6d1c2007",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ssh_pty": true,
    "ami_name": "connector-ami"
  }],
  "provisioners": [{
      "type": "shell",
      "inline": [
        "sleep 60",
        "sudo useradd connector",
        "sudo mkdir -p {{user `connector_ssh_dir`}}",
        "echo 'ssh-rsa  jenkins@ansible-ctrl' | sudo tee {{user `connector_ssh_dir`}}/authorized_keys > /dev/null",
        "sudo chown -R connector. {{user `connector_ssh_dir`}}",
        "sudo chmod 700 {{user `connector_ssh_dir`}}",
        "sudo chmod 600 {{user `connector_ssh_dir`}}"
      ]
    }]
}